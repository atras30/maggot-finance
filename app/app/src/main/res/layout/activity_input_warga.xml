<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputWargaActivity"
    android:background="@color/back2start">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:drawableStart="@drawable/backbutton"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:drawablePadding="10dp"
        android:textColor="@color/primaryacc"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Tambah Warga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/nama_warga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:text="Nama"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/etNamaWarga"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Nama"
        android:inputType="textPersonName"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/nama_warga"
        tools:layout_editor_absoluteX="30dp" />
    <TextView
        android:id="@+id/email_warga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNamaWarga" />

    <EditText
        android:id="@+id/etEmailWarga"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/email_warga"
        tools:layout_editor_absoluteX="30dp" />
    <TextView
        android:id="@+id/alamat_warga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Alamat"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmailWarga" />

    <EditText
        android:id="@+id/etAlamatWarga"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Alamat"
        android:inputType="textPostalAddress"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/alamat_warga"
        tools:layout_editor_absoluteX="30dp" />
    <TextView
        android:id="@+id/nohp_warga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Nomor Telepon"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAlamatWarga" />

    <EditText
        android:id="@+id/etNoHPWarga"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Nomor Telepon"
        android:inputType="number"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/nohp_warga"
        tools:layout_editor_absoluteX="30dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/daftarkanWarga"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="20dp"
        android:text="Daftarkan Warga"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/secondary"
        app:cornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@+id/etNoHPWarga"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>